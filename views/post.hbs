<!DOCTYPE html>
<html lang="en">
    <head>
        {{> head }}
    <body>
        {{> navbar }}

        <h1>{{ post.title }}</h1>
        <p>{{ post.date }}</p>
        <p>{{ post.category }}</p>

        <article>
            {{{ post.content }}}
        </article>

        <p>{{ post.author.name }} - {{ post.author.description }}</p>
        <img src="{{ post.author.profilePicture }}">

        {{> footer }}

    </body>
</html>
